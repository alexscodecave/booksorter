<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:id="@+id/deleteNavigationDrawerLayout"
    tools:context="com.example.alexb.booksorter.AddABook">

    <FrameLayout
        android:id="@+id/deleteFrame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearDeleteContainer"
        android:layout_height="match_parent"
        android:weightSum="1">
        <TextView
            android:id="@+id/txtViewUpdateHeading"
            android:layout_width="match_parent"
            android:text="@string/DeleteRecord"
            android:textSize="18dp"
            android:gravity="center"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/deleteSpinner"
            android:layout_width="match_parent"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp"
            android:layout_height="wrap_content"></Spinner>

        <TextView
            android:id="@+id/txtViewDeleteBookYear"
            android:layout_width="match_parent"

            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txtViewDeleteBookAuthor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txtViewDeleteNoOfPages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txtViewDeleteCurrentPage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txtViewDeleteBookDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/imgViewDeleteBookImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />







        <Button
            android:id="@+id/btnSaveBookDeleteData"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="@string/btnDeleteRecord" />
    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigation"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/nav_items" />


</android.support.v4.widget.DrawerLayout>