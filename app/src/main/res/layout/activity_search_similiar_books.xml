<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.alexb.booksorter.SearchSimiliarBooks">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txtViewSearchBooks"
            android:layout_width="wrap_content"
            android:text="@string/searchForBookID"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/editTextSearchBooks"
            android:layout_width="match_parent"
            android:layout_toEndOf="@+id/txtViewSearchBooks"
            android:layout_below="@+id/txtViewSearchBooks"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnSearchBooks"
            android:text="@string/btnSearchText"
            android:layout_width="wrap_content"
            android:layout_below="@+id/editTextSearchBooks"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/responseView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
